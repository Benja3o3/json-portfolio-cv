---
import { certificates } from "@cv";
---

<section class="flex flex-col gap-1">
  <h1 class="text-lg font-semibold">Certificados</h1>
  <ul class="list-disc pl-5 flex flex-col gap-1">
    {
      certificates.map((cert, index) => (
        <div class="flex flex-col gap-1">
          <li class="text-sm opacity-90">{cert.name}</li>
          <div class="flex flex-row justify-between items-center">
            <p class="text-xs font-bold">{cert.issuer}</p>
            <p class="text-xs">{cert.date}</p>
          </div>
          <a class="text-xs text-gray-500" href={cert.url} target="_blank">
            {cert.url}
          </a>
        </div>
      ))
    }
  </ul>
</section>
