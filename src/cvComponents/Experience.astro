---
import { work } from "@cv";
---

<section class="flex flex-col gap-1 mr-1">
    <h1 class="text-xl font-semibold">Experiencia</h1>
    {
        work.map((w) => (
            <div class="flex flex-col gap-1">
                <h2 class="text-lg font-semibold bg-gray-300">{w.name}</h2>
                <div class="flex flex-row justify-between bg-gray-200">
                    <p class="text-sm">{w.position}</p>
                    <p class="text-sm">
                        {w.startDate} / {w.endDate}
                    </p>
                </div>
                <p class="text-sm">{w.summary}</p>
                <span>{w.highlights.toString()}</span>
            </div>
        ))
    }
</section>
