---
import { work } from "@cv";
---

<section class="flex flex-col gap-1">
    <h1 class="text-xl font-semibold">Experiencia</h1>
    {
        work.map((w) => (
            <div class="flex flex-col gap-1">
                <h2 class="text-lg font-semibold">{w.name}</h2>
                <p class="text-sm">{w.position}</p>
                <p class="text-sm">{w.summary}</p>
            </div>
        ))
    }
</section>
